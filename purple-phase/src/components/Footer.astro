---
import { Github, Linkedin, Cloud, Mail } from 'lucide-react';
const today = new Date();

const socialLinks = [
	{ name: 'Github', url: 'https://www.github.com/ustdoestech', icon: Github },
	{ name: 'LinkedIn', url: 'https://www.linkedin.com/in/ust-oldfield/', icon: Linkedin },
	{ name: 'Bluesky', url: 'https://bsky.app/profile/ustdoes.tech', icon: Cloud },
	{ name: 'Email', url: 'mailto:ust@ustdoes.tech', icon: Mail },
];
---

<footer>
	<div class="system-status">
		<span class="status-label">SYSTEM STATUS:</span>
		<span id="status-value" class="status-value">INITIALIZING...</span>
	</div>
	
	<div class="copyright">
		&copy; {today.getFullYear()} Ust Oldfield. All rights reserved.
	</div>
	
	<div class="social-links">
		{socialLinks.map((link) => (
			<a href={link.url} target="_blank" rel="noopener noreferrer">
				<span class="sr-only">{link.name}</span>
				<link.icon size={32} />
			</a>
		))}
	</div>
</footer>

<script>
	const stats = [
		"SYSTEM ONLINE",
		"MOON PHASE: WANING GIBBOUS",
		"CO2 LEVELS: 421 PPM",
		"NEXT BACKUP: 02:00 UTC",
		"VISITORS: 1 (YOU)",
		"BUILD STATUS: PASSING",
		"KERNEL: 5.15.0-76",
		"UPTIME: 99.9%",
		"DATA LAKE: STABLE",
		"PIPELINES: RUNNING",
		"MEMORY USAGE: 42%",
		"LATENCY: 24ms"
	];

	const statusValue = document.getElementById('status-value');
	
	if (statusValue) {
		// Pick a random stat
		const randomStat = stats[Math.floor(Math.random() * stats.length)];
		
		// Typing effect
		let i = 0;
		statusValue.textContent = '';
		
		function typeWriter() {
			if (i < randomStat.length) {
				statusValue.textContent += randomStat.charAt(i);
				i++;
				setTimeout(typeWriter, 50);
			}
		}
		
		// Start typing after a small delay
		setTimeout(typeWriter, 500);
	}
</script>

<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: var(--bg-color);
		color: var(--text-color);
		text-align: center;
		border-top: 3px solid var(--brand-teal);
		margin-top: 4rem;
	}
	.system-status {
		font-family: var(--font-ui);
		font-size: 0.85rem;
		margin-bottom: 1.5rem;
		padding: 0.5rem 1rem;
		border: 1px dashed var(--border-color);
		display: inline-block;
		background: var(--code-bg);
		color: var(--brand-teal);
		border-radius: 4px;
	}
	.status-label {
		font-weight: bold;
		margin-right: 0.5rem;
	}
	.status-value {
		color: var(--text-color);
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--text-color);
	}
	.social-links a:hover {
		color: var(--brand-teal);
	}
</style>
