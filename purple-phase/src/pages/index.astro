---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import ustImage from '../assets/ust.png';

const allPosts = await getCollection('blog');
const posts = allPosts.sort((a, b) => +b.data.pubDate - +a.data.pubDate).slice(0, 4);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
            .hero {
                display: flex;
                align-items: center;
                gap: 2rem;
                margin-bottom: 4rem;
                padding: 2rem;
                background: var(--surface-color);
                border: 1px solid var(--border-color);
                border-left: 6px solid var(--brand-teal);
                border-radius: var(--radius);
            }
            .hero img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                object-fit: cover;
                border: 4px solid var(--brand-teal);
            }
            .hero-content h1 {
                margin: 0 0 0.5rem 0;
                font-size: 2.5rem;
            }
            .hero-content p {
                margin: 0 0 1rem 0;
                font-size: 1.1rem;
                color: var(--text-color);
                line-height: 1.6;
            }
            .hero-link {
                display: inline-block;
                font-weight: 600;
                color: var(--brand-teal);
                text-decoration: none;
                font-family: var(--font-body);
            }
            .hero-link:hover {
                text-decoration: underline;
                color: var(--accent-dark);
            }
            .section-title {
                display: flex;
                justify-content: space-between;
                align-items: baseline;
                margin-bottom: 2rem;
                border-bottom: 2px solid var(--brand-teal);
                padding-bottom: 0.5rem;
            }
            .section-title h2 {
                margin: 0;
            }
            .section-title a {
                font-weight: 600;
                text-decoration: none;
                color: var(--brand-teal);
            }
            .posts-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                gap: 2rem;
                margin-bottom: 4rem;
            }
            .post-card {
                border: 1px solid var(--border-color);
                padding: 1.5rem;
                transition: transform 0.2s, border-color 0.2s, box-shadow 0.2s;
                text-decoration: none;
                color: inherit;
                background: var(--surface-color);
                display: flex;
                flex-direction: column;
                border-radius: var(--radius);
            }
            .post-card:hover {
                transform: translateY(-2px);
                border-color: var(--brand-teal);
                box-shadow: 0 4px 12px color-mix(in srgb, var(--brand-teal) 15%, transparent);
            }
            .post-card h3 {
                margin: 0 0 0.5rem 0;
                font-size: 1.25rem;
                color: var(--text-color);
                line-height: 1.4;
            }
            .post-card .date {
                font-size: 0.9rem;
                color: var(--text-muted);
                margin-bottom: 1rem;
            }
            .post-card p {
                margin: 0;
                color: var(--text-color);
                line-height: 1.5;
                flex-grow: 1;
            }
            .games-preview {
                background: var(--brand-teal);
                color: #FFFFFF;
                border: none;
                padding: 3rem;
                text-align: center;
                margin-bottom: 4rem;
                border-radius: var(--radius);
            }
            .games-preview h2 {
                color: #FFFFFF;
                margin-top: 0;
                font-size: 2rem;
            }
            .games-preview p {
                font-size: 1.2rem;
                margin-bottom: 2rem;
                opacity: 0.9;
                max-width: 600px;
                margin-left: auto;
                margin-right: auto;
                color: #FFFFFF;
            }
            .btn {
                display: inline-block;
                background: var(--brand-amber);
                color: var(--brand-navy);
                padding: 0.75rem 2rem;
                border-radius: var(--radius);
                font-weight: 600;
                text-decoration: none;
                transition: transform 0.2s, box-shadow 0.2s;
                font-family: var(--font-body);
            }
            .btn:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 16px color-mix(in srgb, var(--brand-amber) 30%, transparent);
                color: var(--brand-navy);
            }
            @media (max-width: 720px) {
                .hero {
                    flex-direction: column;
                    text-align: center;
                    padding: 1.5rem;
                }
                main {
                    width: 100%;
                    padding: 1rem;
                }
                .section-title {
                    flex-direction: column;
                    gap: 0.5rem;
                    align-items: flex-start;
                }
                .games-preview {
                    padding: 1.5rem;
                }
                .posts-grid {
                    grid-template-columns: 1fr;
                }
            }
		</style>
	</head>
	<body>
		<Header />
		<main>
            <section class="hero">
                <Image src={ustImage} alt="Ust Oldfield" />
                <div class="hero-content">
                    <h1>Hi, I am Ust Oldfield</h1>
                    <p>Father, Consultant, Swimmer & Automation enthusiast. I work on Data Engineering, Analytics and AI projects.</p>
                    <a href="/about" class="hero-link">More about me →</a>
                </div>
            </section>

            <section>
                <div class="section-title">
                    <h2>Latest from the Blog</h2>
                    <a href="/blog">View all posts →</a>
                </div>
                <div class="posts-grid">
                    {posts.map((post) => (
                        <a href={`/posts/${post.data.slug || post.id}/`} class="post-card">
                            <h3>{post.data.title}</h3>
                            <span class="date">
                                <FormattedDate date={post.data.pubDate} />
                            </span>
                            <p>{post.data.description}</p>
                        </a>
                    ))}
                </div>
            </section>

            <section class="games-preview">
                <h2>Play & Learn</h2>
                <p>Explore concepts through interactive mini-games and simulations. Have fun while learning.</p>
                <a href="/games" class="btn">Go to Games Arcade</a>
            </section>
		</main>
		<Footer />
	</body>
</html>
